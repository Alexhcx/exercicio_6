<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/black">

    <EditText
        android:id="@+id/localAvistamentoEditText"
        android:layout_width="111dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"
        android:ems="10"
        android:fontFamily="@font/monster"
        android:gravity="center"
        android:hint="Local"
        android:inputType="text"
        android:letterSpacing="0.06"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dataAvistamentoEditText"
        android:layout_width="111dp"
        android:layout_height="48dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="38dp"
        android:backgroundTint="@color/red"
        android:ems="10"
        android:fontFamily="@font/monster"
        android:gravity="center"
        android:hint="dd/MM/yyyy"
        android:inputType="date"
        android:letterSpacing="0.06"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/timeAvistamentoEditText"
        app:layout_constraintStart_toEndOf="@+id/localAvistamentoEditText"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/timeAvistamentoEditText"
        android:layout_width="111dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/red"
        android:ems="10"
        android:fontFamily="@font/monster"
        android:gravity="center"
        android:hint="hh:mm:ss"
        android:inputType="time"
        android:letterSpacing="0.06"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/atualizarAvistamento"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/monster"
        android:letterSpacing="0.06"
        android:text="Atualizar"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/excluirAvistamento"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/monster"
        android:letterSpacing="0.06"
        android:text="Excluir"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>